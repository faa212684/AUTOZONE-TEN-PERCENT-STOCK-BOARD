layout: master

    <header class="row">
      <div class="col-xs-12">
        <ol class="breadcrumb">
          <li><a href="/">Home</a></li>
@if (Model.Document.Source == null) {
          <li>@Model.Document.Area</li>
} else {
          <li><a href="@Model.Document.AreaUrl">@Model.Document.Area</a></li>
          <li>@Model.Document.Source</li>
}
        </ol>
      </div>

      <div class="col-sm-11 col-sm-offset-1">
        <h1>@(Model.Document.Source == null ? Model.Document.Area : Model.Document.Source)</h1>
      </div>
    </header>

    <section class="row">
      <div class="col-sm-5 col-sm-offset-1">
        <h5>&nbsp;</h5>
        <div class="list-group">
            <p class="list-group-item text-danger">@(Model.Document.Source == null ? "The area contains" : "The header file contains"):</p>
            @for (int i = 0; i < Model.Document.Items.Count; ++i) {
            <a class="list-group-item" href="@Model.Document.ItemUrls[i]">@Model.Document.Items[i]</a>
            }
        </div>
      </div>
    </section>
